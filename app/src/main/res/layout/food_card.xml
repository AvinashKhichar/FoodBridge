<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="230dp"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="0dp"
    app:cardCornerRadius="5dp"
    app:cardBackgroundColor="@color/g_card_background"
    app:cardUseCompatPadding="true"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/img_food"
            android:layout_width="90dp"
            android:layout_height="90dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="16dp"
            android:layout_marginTop="10dp"
             />

        <TextView
            android:id="@+id/tv_food_name"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:text="Food Name"
            app:layout_constraintStart_toEndOf="@id/img_food"
            app:layout_constraintTop_toTopOf="@id/img_food"
            android:layout_marginTop="7dp"
            android:layout_marginStart="18dp"
            android:fontFamily="@font/poppins_thin"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="17sp"
            android:maxLines="2"/>

        <TextView
            android:id="@+id/tv_venue"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:text="Vasant Vihar"
            app:layout_constraintStart_toStartOf="@id/tv_food_name"
            app:layout_constraintTop_toBottomOf="@id/tv_food_name"
            android:textColor="@color/black"
            android:textSize="12sp"
            android:fontFamily="@font/sf_pro_display"/>

        <Button
            android:id="@+id/btn_details"
            android:layout_width="77dp"
            android:layout_height="25dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/button"
            android:fontFamily="@font/poppins_light"
            android:text="Details"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="10sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_venue" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>